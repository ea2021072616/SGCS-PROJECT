# ============================================
# CONFIGURACIÓN PARA RENDER.COM
# ============================================
# Copia este contenido a las variables de entorno en Render

# === APLICACIÓN ===
APP_NAME=SGCS
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:GENERA_UNA_KEY_CON_php_artisan_key:generate_--show
APP_URL=https://tu-app.onrender.com

# === LOG ===
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# === BASE DE DATOS (PostgreSQL de Render) ===
DB_CONNECTION=pgsql
DB_HOST=tu-host-postgres.render.com
DB_PORT=5432
DB_DATABASE=sgcs
DB_USERNAME=sgcs_user
DB_PASSWORD=tu-password-de-render

# === CACHE & SESSION ===
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# === SEGURIDAD ===
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# === MIGRACIONES & SEEDERS ===
RUN_MIGRATIONS=true
RUN_SEEDERS=false

# === MAIL (Opcional) ===
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# === VITE (Frontend) ===
VITE_APP_NAME="${APP_NAME}"
